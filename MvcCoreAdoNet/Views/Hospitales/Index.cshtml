@model List<Hospital>

	<h1>Hospitales SQL server</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Direccion</th>
				<th>Telefono</th>
				<th>Detalles</th>
				<th>Actualizar</th>
				<th>Eliminar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Hospital hospital in Model){
				<tr>
					<td>@hospital.Nombre</td>
					<td>@hospital.Direccion</td>
					<td>@hospital.Telefono</td>
					<td>
						<button>
							@Html.ActionLink("Details", "Details", "Hospitales", new {idHospital= hospital.IdHospital})
						</button>
					</td>
				<td>
					<button>
						@Html.ActionLink("Update", "Update", "Hospitales", new { idHospital = hospital.IdHospital })
					</button>
				</td>
				<td>
					<button>
						@Html.ActionLink("Delete", "Delete", "Hospitales", new { idHospital = hospital.IdHospital })
					</button>
				</td>
				</tr>
			}
		</tbody>
	</table>